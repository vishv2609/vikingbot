<?xml version="1.0" ?>

<launch>
  <!-- Arguments -->  
  <arg name="cmd_vel_topic" default="/cmd_vel" />
  <arg name="odom_topic" default="odom" />
  <arg name="move_forward_only" default="true"/>

  <!-- move_base -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" />
    <rosparam file="$(find nbot_description)/param/common_costmap_parameter.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find nbot_description)/param/common_costmap_parameter.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find nbot_description)/param/local_costmap_parameter.yaml" command="load" />
    <rosparam file="$(find nbot_description)/param/global_costmap_parameter.yaml" command="load" />
    <rosparam file="$(find nbot_description)/param/move_base_parameter.yaml" command="load" />
    <rosparam file="$(find nbot_description)/param/dwa_planner_parameter.yaml" command="load" />
    <remap from="cmd_vel" to="$(arg cmd_vel_topic)"/>
    <remap from="odom" to="$(arg odom_topic)"/>
    <param name="DWAPlannerROS/min_vel_x" value="0.0" if="$(arg move_forward_only)" />
  </node>
</launch>